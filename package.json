{
  "name": "bitcoin-wallet-extension",
  "version": "0.10.0",
  "description": "Bitcoin Wallet Chrome Extension - Testnet",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/hwy419/bitcoin-wallet.git"
  },
